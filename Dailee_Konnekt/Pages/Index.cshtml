@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["ExcludeNav"] = true;
}
<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
</head>

<body>
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 text-center" style="width: 26rem; border-top: 5px solid #333;">
        <img src="images/dk-removebg-preview(1).png" alt="DaileeKonnekt Logo" class="mb-3" style="width: 80px;">

        <h3 class="fw-bold">
            <span style="color: #C69234;">Dailee</span><span style="color: #333;">Konnekt</span>
        </h3>
        <p class="text-muted">Login to your account</p>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger p-2" role="alert">
                <span class="material-icons align-middle">error</span> @Model.ErrorMessage
            </div>
        }

        <form method="post">
            <div class="mb-3 input-group">
                <span class="input-group-text">
                    <span class="material-icons">person</span>
                </span>
                <input type="text" name="Username" class="form-control" placeholder="Username" required>
            </div>

            <div class="mb-3 input-group">
                <span class="input-group-text">
                    <span class="material-icons">lock</span>
                </span>
                <input type="password" name="Password" class="form-control" placeholder="Password" required>
            </div>

            <button type="submit" class="btn w-100 text-white" style="background-color: #333;">
                <span class="material-icons align-middle">login</span> Login
            </button>

            <div class="text-center mt-3">
                <small>Don't have an account? <a asp-page="Index" class="fw-semibold" style="color: #333;">Sign Up</a></small>
            </div>
        </form>
    </div>
</div>
</body>